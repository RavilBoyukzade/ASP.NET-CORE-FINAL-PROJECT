@model Admin.Models.Blog.BlogViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Blog Yarat</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="checkbox" asp-for="Status" value="true" class="custom-control-input" checked="">
                        <label class="custom-control-label" asp-for="Status">Aktiv</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Başlıq</label>
                    <input class="form-control form-control-user slug-source" asp-for="Title">
                    <span class="field-validation-valid text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text">Mətn</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Text"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtitle">Digər Başlıq</label>
                    <input class="form-control form-control-user slug-source" asp-for="Subtitle">
                    <span class="field-validation-valid text-danger" asp-validation-for="Subtitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtext">Digər mətn</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Subtext"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Subtext"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionText">Button Texti</label>
                    <input class="form-control form-control-user slug-source" asp-for="ActionText">
                    <span class="field-validation-valid text-danger" asp-validation-for="ActionText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceId">Xidmət</label>
                    <select class="form-control form-control-user" asp-for="ServiceId">
                        <option selected disabled>Seçin</option>
                        @foreach (var item in ViewBag.Services)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="field-validation-valid text-danger" asp-validation-for="ServiceId"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Əlavə et</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


